{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "id":"redis-master",
   "metadata":{
      "name":"redis-master",
      "labels":{
         "name":"redis",
         "role":"master"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"redis",
         "role":"master"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"redis",
               "role":"master"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"redis-master",
                  "image":"$image",
                  "ports":[
                     {
                        "name":"redis-server",
                        "containerPort":$hostport,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}
